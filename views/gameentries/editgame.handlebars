<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <form class="form-group" action="/editgame/{{user.id}}?_method=PUT" method="POST">
                <h3>Edit your game here</h3>
                <label>Edit Username</label>
                <input type="hidden" name="_method" value="PUT">
                <br>
                <input type="text" name="title" value="{{entry.name}}" required>
                <br>
                <label>Edit Number of Points</label>
                <input type="text" name="genre" class="form-control" required>{{entry.points}}</textarea>
                <br>
                <button type="submit" class="btn btn-primary">Update Game</button>
            </form>
        </div>
    </div>
</div>